{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./", // Root directory is the project root
    "outDir": "./dist", // Output compiled JavaScript to dist/ folder
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"], // Include all TypeScript files in the project
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist folders
}
